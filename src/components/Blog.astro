---
const { title, description, link } = Astro.props;
import { blogPosts } from "../data/blogPosts";
---

<div class="container-fluid blog py-5">
  <div class="container py-5">
    <div class="section-title mb-5">
      <h4 class="sub-title px-3 mb-0">Nuestro Blog</h4>
      <h1 class="display-3 mb-4">
        Instalaciones modernas y terapia de alta calidad
      </h1>
      <p>
        Descubre consejos y experiencias sobre fisioterapia, salud y bienestar.
      </p>
    </div>

    <div class="row g-4 justify-content-center">
      {blogPosts.map((post) => (
        <div class="col-md-6 col-lg-6 col-xl-4 d-flex">
          <div class="blog-item rounded h-100">
            <div class="blog-img">
              <img src={post.image} class="img-fluid w-100" alt={post.title} />
            </div>
            <div class="blog-centent p-4">
              <div class="d-flex justify-content-between mb-4">
                <p class="mb-0 text-muted">
                  <i class="fa fa-calendar-alt text-primary"></i> {post.date}
                </p>
                <a href={`/blog/${post.slug}`} class="text-muted">
                  <span class="fa fa-comments text-primary"></span> {post.comments} Comentarios
                </a>
              </div>
              <a href={`/blog/${post.slug}`} class="h4">{post.title}</a>
              <p class="my-4">{post.excerpt}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
