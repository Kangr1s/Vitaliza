---
import type { RouteInfo } from "../data/breadcrumbs";

interface Props {
  route: RouteInfo;
}

const { route } = Astro.props;
---

<div class="container-fluid bg-breadcrumb">
  <div class="container text-center py-5" style="max-width: 900px;">
    <h3 class="text-white display-3 mb-4">{route.title}</h3>
    <ol class="breadcrumb justify-content-center mb-0">
      {route.items.map((item, i) => (
        <li class={`breadcrumb-item ${i === route.items.length - 1 ? "active text-primary" : ""}`}>
          {item.url ? <a href={item.url}>{item.name}</a> : item.name}
        </li>
      ))}
    </ol>
  </div>
</div>
