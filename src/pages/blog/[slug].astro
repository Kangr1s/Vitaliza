---
import { blogPosts } from "../../data/blogPosts";
import Layout from "../../layouts/Layout.astro";

const { slug } = Astro.params;
const post = blogPosts.find((p) => p.slug === slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}

---
<Layout
  title="Vitaliza - Comprometidos con tu recuperación"
  description="En Vitaliza, nos dedicamos a ofrecer soluciones integrales para tu bienestar y recuperación. Nuestro equipo de expertos está comprometido en brindarte el apoyo necesario para alcanzar tus objetivos de salud."
>
  <main>
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h1 class="display-4 mb-4">{post.title}</h1>
          <p class="text-muted mb-4">
            <i class="fa fa-calendar-alt text-primary"></i>
            {post.date}
          </p>
          <img
            src={post.image}
            class="img-fluid rounded mb-4"
            alt={post.title}
          />
          <Fragment set:html={post.content} />
        </div>
      </div>
    </div>
  </main>
</Layout>
